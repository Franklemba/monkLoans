                     <input type="text" class="form-control" id="amountReceived" name="amountReceived" value="<%=amountReceived%>" disabled>
                   </div>
                   <div class="mb-3">
                     <label for="repaymentAmount" class="form-label">Repayment</label>
                     <input type="text" class="form-control" id="repaymentAmount" name="repaymentAmount" value="<%=totalRepayment%>" disabled>
                   </div>
                   <div class="mb-3">
                     <label for="nextPaymentDate" class="form-label">Repayment Date</label>
                     <input type="date" class="form-control" id="nextPaymentDate" name="nextPaymentDate" value="<%=repaymentDate%>" disabled>
                   </div>
                   <hr>
                   <button type="submit" class="btn btn-primary">NEXT</button>
                  
                  </div>
                 </form>
